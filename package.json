    "ws": "^8.18.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "snazzy": "^9.0.0",
    "tsc-esm-fix": "^3.1.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
