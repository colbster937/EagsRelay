{
  "name": "eaglerrelayjs",
  "version": "0.1.2",
  "description": "Eaglercraft relay server implementation in typescript",
  "repository": "github:WebMCDevelopment/EaglerRelayJS",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc && tsc-esm-fix dist",
